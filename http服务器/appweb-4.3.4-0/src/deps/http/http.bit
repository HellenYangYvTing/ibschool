/*
    http.bit -- Bit File for Http
 */

Bit.load({

    targets: {
        libhttp: {
            type: 'lib',
            sources: [ 'httpLib.c' ],
            headers: [ '*.h' ],
            depends: [ 'libmpr' ],
            scripts: {
                postblend: "
                    let s = bit.settings
                    if (s.hasPam && s.http && s.http.pam) {
                        bit.target.libraries.push('pam')
                    }
                    if (bit.packs.pcre && bit.packs.pcre.enable) {
                        bit.target.depends.push('libpcre')
                    }
                ",
            },
        },

        http: {
            type: 'exe',
            sources: [ 'http.c' ],
            depends: [ 'libhttp', ],
            platforms: [ 'local' ],
        },
	},
})
