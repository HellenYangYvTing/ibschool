/*
    start.bit - Bit build file
 */

Bit.load({
    settings: {
        requires: ['appweb'],
        bit: '0.8.6',
    },
    targets: {
        server: {
            type:    'exe',
            sources: '*.c',
            depends: ['appweb'],
        },
        run: {
            run: './server',
        },
        cleanup: {
            type: 'clean',
            action: "rm(['cache/*', 'server.o'])",
        },
    },
    packDefaults: { appweb: true },
})
